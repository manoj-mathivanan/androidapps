                android:src="@drawable/logo_manu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp" >

            <ImageView
                android:id="@+id/ImageView03"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0.53"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/logo_base" />

            <ImageView
                android:id="@+id/ImageView04"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0.53"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/samsungs_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp" >

            <ImageView
                android:id="@+id/ImageView05"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0.53"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/logo_woodlands" />

            <ImageView
                android:id="@+id/ImageView06"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="0.53"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/wrangler" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp" >

            <ImageView
                android:id="@+id/ImageView07"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0.53"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/pepejeans" />

            <ImageView
                android:id="@+id/ImageView08"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="0.53"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:src="@drawable/logo_tissot" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    </ScrollView>

</LinearLayout>